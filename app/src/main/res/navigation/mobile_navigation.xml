<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigationHome">

    <fragment
        android:id="@+id/navigationHome"
        android:name="com.example.bequem.home.fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home"/>

    <fragment
        android:id="@+id/navigationCart"
        android:name="com.example.bequem.home.fragments.CartFragment"
        android:label="Cart"
        tools:layout="@layout/fragment_cart"/>

    <fragment
        android:id="@+id/navigationFavorite"
        android:name="com.example.bequem.home.fragments.FavoriteFragment"
        android:label="Favourites"
        tools:layout="@layout/fragment_favorite"/>

    <fragment
        android:id="@+id/navigationProfile"
        android:name="com.example.bequem.home.fragments.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile"/>

    <fragment
        android:id="@+id/bottomnavigationHome"
        android:name="com.example.bequem.home.fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home"/>
    <fragment
        android:id="@+id/bottomnavigationCart"
        android:name="com.example.bequem.home.fragments.CartFragment"
        android:label="Cart"
        tools:layout="@layout/fragment_cart"/>

    <fragment
        android:id="@+id/bottomnavigationFavorite"
        android:name="com.example.bequem.home.fragments.FavoriteFragment"
        android:label="Favourite"
        tools:layout="@layout/fragment_favorite"/>
    <fragment
        android:id="@+id/bottomnavigationProfile"
        android:name="com.example.bequem.home.fragments.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile"/>





